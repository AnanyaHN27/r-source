\RequirePackage{amsbsy}%-- AMS boldsymbol: defines '\boldsymbol'

\addtolength{\textheight}{12mm}%\
\addtolength{\topmargin}{-9mm} %/ -- still fits on US paper
\addtolength{\textwidth}{24mm}%   -- still fits on US paper
\setlength{\oddsidemargin}{10mm}
\setlength{\evensidemargin}{\oddsidemargin}

\newcommand{\SetLmargin}{\setlength{\leftmargin}{0.375in}}
\newcommand{\BlistIt}{\begin{list}{}\SetLmargin\item}
%
%%-- ``Need Vertical Space'' -- useful plain-TeX hack by Werner Stahel, ETH:
%%\newc..nd{\vneed}[1]{\penalty-5000\vskip#1 plus20pt\penalty-5000\vspace{-#1}}
\newcommand{\vneed}[1]{\penalty-1000\vskip#1 plus 10pt minus #1\penalty-1000\vspace{-#1}}

\newlength{\middle}
\setlength{\middle}{\textwidth}
%%\addtolength{\middle}{-24mm}
\addtolength{\middle}{-2.25in}
\addtolength{\middle}{-4pt}

\def\href#1#2{\special{html:<a href="#1">}{#2}\special{html:</a>}}

\newenvironment{Header}[2]{%
\vneed{1ex}%-- uncommenting saves a few pages, but gives some UGLY pagebreaks..
\markright{#1}
%%-- would like to ADD '#1' to ``left mark'' (= 'Chapter 1. Fun...Doc..')...
\noindent
\nopagebreak
\begin{center}
  \begin{tabular}{c}
    \hline \rule[-0.275cm]{0cm}{0.8cm}
    \makebox[1in][l]{\texttt{#1}}
    \makebox[\middle]{\emph{#2}}
    \makebox[1in][r]{\texttt{#1}} \\ \hline
  \end{tabular}
\end{center}
\BlistIt}%
{\end{list}}

\newenvironment{Arguments}[0]{
\subsubsection*{Arguments}
\begin{list}{}{\setlength{\leftmargin}{0.75in}\setlength{\labelwidth}{0.5in}}}
{\end{list}}

\newenvironment{Section}[1]{
\subsubsection*{#1}\BlistIt}{\end{list}}

\newenvironment{Description}[0]{
\subsubsection*{Description}\BlistIt}{\end{list}}

\newenvironment{Value}[0]{
\subsubsection*{Value}\BlistIt}{\end{list}}

\newenvironment{Values}[1]{
\subsubsection*{Value}\BlistIt #1\end{list}
\begin{list}{}{\setlength{\leftmargin}{0.75in} \setlength{\labelwidth}{0.75in}}}
{\end{list}}

\newenvironment{References}[0]{
\subsubsection*{References}\BlistIt}{\end{list}}

\newenvironment{Note}[0]{
\subsubsection*{Note}\BlistIt}{\end{list}}

\newenvironment{SeeAlso}[0]{
\subsubsection*{See Also}\begin{list}{}\raggedright\SetLmargin\item}{\end{list}}

\newenvironment{Examples}[0]{
\subsubsection*{Examples}\BlistIt}{\end{list}}
